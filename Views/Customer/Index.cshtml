@model IEnumerable<ECommerce.BLL.Models.CustomerVModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-box mb-30">
    <div class="pd-20">
    </div>
    <div>
         <a class="pull-right btn btn-success" asp-action="CheckProducts">Check Product</a>
        <h2 class="h4 pd-20">All Customers</h2>
    </div>
    <div>
        <table class="data-table table wrap">
            <thead>
                <tr>
                    <th class="table-plus datatable-nosort">Name</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th class="datatable-nosort">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <h5 class="font-16">@item.name</h5>
                        </td>
                        <td>@item.address</td>
                        <td>@item.phone</td>
                        <td>
                            <div class="dropdown">
                                <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                    <i class="dw dw-more"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                    <a class="dropdown-item" asp-action="Details" asp-controller="Customer" asp-route-id="@item.id"><i class="dw dw-eye"></i>View </a>
                                    <a class="dropdown-item" asp-action="Edit" asp-controller="Customer" asp-route-id="@item.id"><i class="dw dw-edit2"></i> Edit</a>
                                    <a class="dropdown-item" asp-action="Delete" asp-controller="Customer" asp-route-id="@item.id"><i class="dw dw-delete-3"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

